{% extends 'Admin/Layouts/layouts.twig' %}
{% block title %}Create User{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sunting Hak Akses</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sunting hak akses
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <form method="post" action="" class="form-horizontal" role="form">
                            <div class="form-group">
                                <label>Pilih hak akses</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="role" value="0" {% if (data == 0) %}checked{% endif %}>&nbsp;Admin
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="role" value="1" {% if (data == 1) %}checked{% endif %}>&nbsp;Member
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="UPDATE" class="btn btn-info btn-block">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">&nbsp;</div>
{% endblock %}