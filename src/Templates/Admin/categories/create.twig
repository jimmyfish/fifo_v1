{% extends 'Admin/Layouts/layouts.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Input Category</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="col-md-2">&nbsp;</div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Complete the information
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    {% for message in app.session.getFlashBag.get('message_error') %}
                        <div class="alert alert-danger alert-dismissable" >
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.session.getFlashBag.get('message_success') %}
                        <div class="alert alert-success alert-dismissable" >
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            {{ message }}
                        </div>
                    {% endfor %}
                    <form method="post" action="" class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="fullname">Full Name</label>
                            <input type="text" class="form-control" name="name" id="name" required>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="ADD CATEGORY" class="btn btn-info btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">&nbsp;</div>
{% endblock %}