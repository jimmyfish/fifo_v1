{% extends 'Admin/Layouts/layouts.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Daftar FAQ</h1>
                <a href="{{ path('admin_faq_create') }}" class="btn btn-primary">Buat Baru</a>
            <p>&nbsp;</p>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    {% for message in app.session.flashbag.get('faq_success') %}
        <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.flashbag.get('faq_error') %}
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Ups!</strong> {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="video-list">
                        <thead>
                        <tr>
                            <th>No</th>
                            <th>Pertanyaan</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% for info in data %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ info.question }}</td>
                                <td>
                                    {#<a href="{{ path('admin_faq_edit', {id: data.id}) }}">#}
                                        {#<i class="fa fa-pencil text-info"></i>#}
                                    {#</a>#}
                                    <a href="{{ path('admin_faq_delete', {id:info.id}) }}" class="label label-danger">
                                        Hapus
                                    </a>
                                </td>
                            </tr>

                            {% set i = i + 1 %}
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}