{% extends 'Admin/Layouts/layouts.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-video-camera text-primary"></i> Sunting Anggota</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lengkapi data dibawah
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <form role="form" method="post" action="">
                            <div class="form-group">
                                <label for="title">Nama Lengkap</label>
                                <input type="text" id="title" name="title" class="form-control" value="{{ data.title }}">
                            </div>

                            <div class="form-group">
                                <label for="job">Jabatan <small><strong>Di Komunitas</strong></small></label>
                                <input type="text" id="job" name="job" class="form-control" value="{{ data.job }}">
                            </div>

                            <div class="form-group">
                                <label for="description">Deskripsi</label>
                                <textarea id="description" name="description" class="form-control" value="{{ data.description }}"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="fbLink">Facebook <small>ID Facebook ( eg. facebook.com/<strong>id</strong> )</small></label>
                                <input type="text" class="form-control" id="fbLink" name="fbLink" placeholder="Facebook ID">
                            </div>

                            <div class="form-group">
                                <label for="igLink">Instagram <small><strong>ID Instagram</strong></small></label>
                                <input type="text" class="form-control" id="igLink" name="igLink" placeholder="Instagram">
                            </div>

                            <div class="form-group">
                                <label id="images">Upload Gambar</label>

                            </div>

                            <div class="form-group input-container">
                                <p class="text-danger hide">HARAP MASUKKAN GAMBAR</p>
                                <div class="input-inner" data-property="images">
                                    <img src="{{ app.request.basepath }}/assets/images/default-placeholder.png" class="img-preview">
                                    <label>
                                        <i class="fa fa-2x fa-plus"></i>
                                        <input type="file" class="hide" onchange="readThis(this)" name="images[]" id="images" accept="image/*" required>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-block btn-success" value="Proses">
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">&nbsp;</div>
    </div>
{% endblock %}