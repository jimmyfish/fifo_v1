{% extends 'Admin/Layouts/layouts.twig' %}

{% block content %}
    <!-- Sponsorship  -->
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Sponsorship</h1>
            <a href="{{ path('admin_sponsor_create') }}" class="btn btn-primary">Buat Baru</a>
            <p>&nbsp;</p>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {% for message in app.session.flashbag.get('sponsor_success') %}
        <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.flashbag.get('sponsor_error') %}
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Ups!</strong> {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.flashbag.get('sponsor_edit') %}
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="list-sponsor">
                        <thead>
                        <tr>
                            <th>No</th>
                            <th>Judul</th>
                            <th>deskripsi</th>
                            <th>No Telp/WA</th>
                            <th>Gambar</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% for data in sponsorList %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ data.title }}</td>
                                <td>{{ data.description }}</td>
                                <td>{{ data.telp }}</td>
                                <td>{{ data.images }}</td>
                                <td>
                                    <a href="{{ path('admin_sponsor_edit', {id:data.id}) }}">
                                        <i class="fa fa-pencil text-info"></i>
                                    </a>
                                    <a href="{{ path('admin_sponsor_delete', {id:data.id}) }}">
                                        <i class="fa fa-trash text-danger"></i>
                                    </a>
                                </td>
                            </tr>

                            {% set i = i + 1 %}
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}
{% block customJS %}
    <script>
    $(document).ready(function () {
        $('#list-sponsor').DataTable({
            responsive: true,
            "columnDefs": [
                { "orderable": false, "targets": [4,3]},
                { "searchable": false, "targets": 4 }
            ]
        });

        
    });


    </script>
{% endblock %}