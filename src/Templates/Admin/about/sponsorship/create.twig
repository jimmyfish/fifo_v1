{% extends 'Admin/Layouts/layouts.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-comment text-primary"></i> Data Sponsorship</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lengkapi data dibawah
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <form role="form" method="post" action="">
                            <div class="form-group">
                                <label for="title">Nama Sponsor</label>
                                <input type="text" id="title" name="title" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="description">Deskripsi</label>
                                <textarea id="description" name="description" class="form-control"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="telp">No Telp/WA</label>
                                <input type="text" id="telp" name="telp" class="form-control">
                            </div>

                            {#<div class="form-group">
                                <label id="images">Upload Gambar</label>

                            </div>

                            <div class="form-group input-container">
                                <p class="text-danger hide">HARAP MASUKKAN GAMBAR</p>
                                <div class="input-inner" data-property="images">
                                    <img src="{{ app.request.basepath }}/assets/images/default-placeholder.png" class="img-preview">
                                    <label>
                                        <i class="fa fa-2x fa-plus"></i>
                                        <input type="file" class="hide" onchange="readThis(this)" name="images[]" id="images" accept="image/*" required>
                                    </label>
                                </div>
                            </div>

                            {#<div class="form-group">
                                <label for="images">Gambar</label>
                                {% if (data.picture) is not null %}
                                    <img src="{{ app.request.basepath }}/photo/profiles/{{ data.picture }}" class="img-responsive" alt="">
                                {% else %}
                                    <img src="{{ app.request.basepath }}/assets/images/man.png" class="img-responsive" alt="">
                                {% endif %}
                            </div>#}

                            <div class="form-group">
                                <input type="submit" class="btn btn-primary btn-block" value="Masukkan data">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">&nbsp;</div>
    </div>
{% endblock %}