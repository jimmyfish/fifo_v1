{% extends 'Admin/Layouts/layouts.twig' %}

{% block content %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Comentar List Manager</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    {% for message in app.session.getFlashBag.get('message_error') %}
                        <div class="alert alert-danger alert-dismissable" >
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.session.getFlashBag.get('message_success') %}
                        <div class="alert alert-success alert-dismissable" >
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            {{ message }}
                        </div>
                    {% endfor %}
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="comentar-list">
                            <thead>
                            <tr>
                                <th>No</th>
                                <th>Post</th>
                                <th>Nama</th>
                                <th>Komentar</th>
                                <th>Waktu</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set i = 1 %}
                            {% for info in data %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>
                                        <a href="#">
                                            <i class="fa fa-pencil text-info"></i>
                                        </a>
                                        <a href="#">
                                            <i class="fa fa-trash text-danger"></i>
                                        </a>
                                    </td>
                                </tr>

                                {% set i = i + 1 %}
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

{% endblock %}

{% block customJS %}
    <script>
        $(document).ready(function () {
            $('#comentar-list').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}