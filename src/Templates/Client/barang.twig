{% extends 'Client/Layouts/layouts.twig' %}
{% block title %}Daftar {{ title }}{% endblock %}
{% block content %}
    <div id="main-kerja" class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">Daftar
                    <small>{{ title }}</small>
                    </h1>
                </div>
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1">
                        <form action="{{ path('client_list_barang_filter') }}" method="post">
                            <div class="input-group">
                                <div class="input-group-btn search-panel">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <span id="search_concept">Semua</span> <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" id="search-filter" role="menu">
                                        {% for info in cat %}
                                            <li><a href="#{{ info.id }}" class="filter">{{ info.name }}</a></li>
                                        {% endfor %}
                                        <li class="divider"></li>
                                        <li><a href="#0">Semua</a></li>
                                    </ul>
                                </div>
                                <input type="hidden" name="search_param" id="search-param" value="0" id="search_param">
                                <input type="text" class="form-control" name="search-keyword" placeholder="Masukkan Keyword">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="upper-wrapper">
                    {% set i = 0 %}
                    {% if (barang|length > 0) %}
                        {% for info in barang %}
                            <div class="col-md-3 col-sm-4 col-xs-6 inner-wrapper">
                                <div class="barang-listing">
                                    <div class="img-wrapper">
                                    <img src="{{ app.request.basepath }}/photo/barang/{{ info.id }}/{{ photo[i].filename}}" class="img-responsive">
                                </div>
                                <div class="barang-info">
                                    <p class="barang-title">{{ info.title }}</p>
                                    <div class="barang-date">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-6 col-xs-6">
                                                <i class="fa fa-clock-o"></i> &nbsp;{{ info.createdAt|date('d M Y') }}
                                            </div>
                                            <div class="col-md-6 col-sm-6 col-xs-6">
                                                <i class="fa fa-user"></i> &nbsp;{{ info.founder.firstName }}
                                            </div>
                                        </div>
                                    </div>
                                    <p class="barang-description">
                                        {{ info.description }}
                                    </p>
                                </div>
                                <div class="barang-footer">
                                    <a href="{{ path('detailClient', {id: info.id}) }}" class="btn btn-red btn-block">Details</a>
                                </div>
                                </div>
                            </div>
                            {% set i = i + 1 %}
                        {% endfor %}
                    {% else %}
                        <p>&nbsp;</p>
                        <div class="jumbotron text-center">
                            <h4>Belum ada barang diposting</h4>
                        </div>
                    {% endif %}
                </div>
            </div>
            
            <div class="text-center">
                <ul class="pagination pagination-lg">
                    <li>
                      <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                    </li>
                    <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">...</a></li>
                    <li><a href="#">10</a></li>
                    <li><a href="#">11</a></li>
                   
                    <li>
                      <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
{% endblock %}