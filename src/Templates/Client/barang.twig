{% extends 'Client/Layouts/layouts.twig' %}

{% block title %}Daftar{% endblock %}

{% block content %}
<!-- Main Content -->
<div id="main-kerja" class="container-fluid">
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Daftar
                    <small>Barang Ditemukan</small>
                </h1>
            </div>
            {#{{ dump(photo) }}#}
            {% set i = 0 %}
            {% for info in barang %}
                <div class="col-md-3 col-sm-3 col-xs-6 text-center">
                    <div class="thumbnail">
                        <img class="img-responsive" src="{{ app.request.basepath }}/photo/barang/{{ info.id }}/{{ photo[i].filename }}" alt="">
                        <div class="caption">
                            <h3>{{ cat[info.categoryId - 1].name }}<br>
                                <small>{{ info.title }}</small>
                            </h3>
                            <p>{{ info.description }}</p>
                            <ul class="list-inline">
                                <li><a href="{{ path('detailClient', {id: info.id}) }}"><button type="button" class="btn btn-info fa fa-eye" aria-hidden="true" aria-haspopup="true" aria-expanded="false"> Lihat</button></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                {% set i = i + 1 %}
            {% endfor %}
        </div>
        <!-- /.row -->
    </div>
</div>
{% endblock %}