{% extends 'Client/Layouts/layouts.twig' %}

{% block title %}Daftar Barang Di Temukan{% endblock %}

{% block content %}
<!-- Main Content -->
<div id="main-kerja" class="container-fluid">
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Daftar
                    <small>Barang Di Temukan</small>
                </h1>
            </div>
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <form action="{{ path('client_list_barang_filter') }}" method="post">
                        <div class="input-group">

                            <div class="input-group-btn search-panel">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <span id="search_concept">Semua</span> <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" id="search-filter" role="menu">
                                    {% for info in cat %}
                                        <li><a href="#{{ info.id }}" class="filter">{{ info.name }}</a></li>
                                    {% endfor %}
                                    <li class="divider"></li>
                                    <li><a href="#0">Semua</a></li>
                                </ul>
                            </div>
                            <input type="hidden" name="search_param" id="search-param" value="0" id="search_param">
                            <input type="text" class="form-control" name="search-keyword" placeholder="Masukkan Keyword">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            {#{{ dump(photo) }}#}
            {% set i = 0 %}
            {% for info in barang %}
                <div class="col-md-3 col-sm-3 col-xs-6 text-center">
                    <div class="thumbnail">
                    {% if (photo[i] is not null) %}
                        <img class="img-responsive" src="{{ app.request.basepath }}/photo/barang/{{ info.id }}/{{ photo[i].filename }}" alt="">
                    {% endif%}
                        <div class="caption">
                            <h4>{{ info.title }}<br>
                                <small>
                            
                                <i class="fa fa-tag" aria-hidden="true"> {{ cat[info.categoryId - 1].name }}</i> ,  
                                <i class="fa fa-clock-o" aria-hidden="true"> 12 Feb 2017</i></small>

                            </h4>
                            <p>{{ info.description }}</p>
                            <ul class="list-inline">
                                <li><a href="{{ path('detailClient', {id: info.id}) }}"><button type="button" class="btn btn-info fa fa-eye" aria-hidden="true" aria-haspopup="true" aria-expanded="false"> Lihat</button></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                {% set i = i + 1 %}
            {% endfor %}
        </div>
        <!-- /.row -->
    </div>
</div>
{% endblock %}