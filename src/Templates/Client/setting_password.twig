{% extends 'Client/Layouts/layouts.twig' %}

{% block title %}Reset Password{% endblock %}

{% block content %}
    <div id="form-login" class="container-fluid">
        <div class="form">
            <div id="login">
                <h1>Ubah Password</h1>
                {% for message in app.session.getFlashBag.get('message_error') %}
                    <div class="alert alert-danger">
                        <strong>Ups!</strong> {{ message }}
                    </div>
                {% endfor %}
                <form action="" method="post">

                    <div class="field-wrap">
                        <label for="old">
                            Password Lama<span class="req">*</span>
                        </label>
                        <input id="old-password" name="old-password" type="password" required autocomplete="off"/>
                    </div>
                    <div class="field-wrap">
                        <label for="password">
                            Password Baru<span class="req">*</span>
                        </label>
                        <input id="password" name="password" type="password" required autocomplete="off"/>
                    </div>
                    <div class="field-wrap">
                        <label for="repeat-password">
                            Ulangi Password<span class="req">*</span>
                        </label>
                        <input id="repeat-password" name="repeat-password" type="password" required autocomplete="off"/>
                    </div>

                    <button type="submit" class="button button-block">
                        Proses</button>
                </form>

            </div>
        </div>
    </div>
{% endblock %}